@model List<Skill>
@{
    ViewData["Title"] = "List of skills";
}
<div>

    <h1>@ViewData["Title"]</h1>
    <a 
        asp-controller="Skill"
        asp-action="Create"
    class="btn btn-success"    
    >Create</a>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Image</th>
                <th>Title</th>
                <th>Color</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>
                        @if (item.ImageFile != null) {
                            <img style="max-width: 50px;" class="img-thumbnail" src="@item.ImageFile.Src" />
                        }
                    </td>
                    <td>@item.Title</td>
                    <td>
                        <div style="display: inline-block; height: 40px; width: 40px; background-color: @item.Color"></div>
                        @item.Color
                        </td>
                    <td>
                        <a asp-area=""
                           asp-controller="Skill"
                           asp-action="View"
                           asp-route-id="@item.Id"
                           class="btn btn-primary">View</a>

                        <a asp-area=""
                           asp-controller="Skill"
                           asp-action="Edit"
                           asp-route-id="@item.Id"
                           class="btn btn-primary">Edit</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>

</div>