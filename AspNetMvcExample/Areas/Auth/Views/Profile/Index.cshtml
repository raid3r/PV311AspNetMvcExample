@model User
@{
    ViewData["Title"] = "Profile";
}
<div>
    <h1 class="display-4">@ViewData["Title"]</h1>

    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header"></div>
                <div class="card-body">

                    @if (Model.Image != null)
                    {
                        <div class="avatar" style="background-image: url(@Model.Image.Src)"></div>
                    }


                    <div><h5>@Model.FullName</h5></div>
                    <div>
                        <div class="small text-muted">Email</div>
                        @Model.Email
                    </div>
                    <div>
                        <div class="small text-muted">Phone</div>
                        @Model.PhoneNumber
                    </div>
                </div>
                <div class="card-footer">
                    <a asp-area="Auth"
                       asp-controller="Profile"
                       asp-action="Edit"
                       class="btn btn-outline-success">Edit</a>

                    <a asp-area=""
                       asp-controller="Home"
                       asp-action="Index"
                       class="btn btn-outline-primary">Return</a>

                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header"></div>
                <div>
                    <a asp-area="Auth"
                       asp-controller="Profile"
                       asp-action="ChangePassword"
                       class="btn btn-outline-success">Change password</a>

                    <button
                        class="btn btn-outline-danger delete-account">Delete account
                    </button>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script>
        document.querySelector('.delete-account').addEventListener('click', function () {
            Swal.fire({
                title: "Are you sure?",
                text: "You won't be able to revert this!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, delete it!"
            }).then((result) => {
                if (result.isConfirmed) {
                    //"/Auth/Profile/Delete"
                    fetch('@Url.Action("Delete", new { Area = "Auth", Controller = "Profile" })', {
                        method: 'DELETE'
                    }).then(() => {
                        Swal.fire({
                            title: "Deleted!",
                            text: "Your file has been deleted.",
                            icon: "success"
                        }).then(() => {
                            window.location.href = '@Url.Action("Register", new { Area = "Auth", Controller = "Account" })'
                        })
                    })
                }
            })
        })
    </script>
}